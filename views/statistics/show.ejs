<!--<h3>Estadisticas</h3>-->
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <div class="panel panel-default margenArriba">
      <div class="panel-heading"><span class="h3">Estadisticas</span></div>
        <ul class="list-group">
          <li class="list-group-item">Número de preguntas: <mark><%= quizzes.length%></mark></li>
          
          <% var contador = 0; var sinC = 0; var conC = 0;%>
          <% for (var i=0; i<quizzes.length;i++) { %>
            <% contador = contador + quizzes[i].Comments.length; %>
            <% if (quizzes[i].Comments.length == 0) { %>
              <% sinC = sinC + 1; %>
            <% } else { %>
              <% conC = conC + 1; %>
            <% } %>  
          <% } %> 
          <li class="list-group-item">Número de comentarios totales: <mark><%= contador %></mark></li>
          
          <% if (contador == 0) { %>
            <% var media = 0 %>
          <% } else { %>
            <% var media = contador / quizzes.length; %>
            <% media = media.toFixed(1) %>
          <% } %>
          <li class="list-group-item">Número medio de comentarios por pregunta: <mark><%= media %></mark></li>

          <li class="list-group-item">Número de preguntas <strong>sin</strong> comentarios: <mark><%= sinC %></mark></li>
          <li class="list-group-item">Número de preguntas <strong>con</strong> comentarios: <mark><%= conC %></mark></li>
        </ul>

    </div>
  </div>
</div>