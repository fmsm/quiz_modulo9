<form class="form-signin" method="POST" action="/login">
        <h3 class="form-signin-heading">Introduzca sus datos</h3>
        
        <label for="inputUsuario" class="sr-only">Usuario</label>
        <input type="text" id="inputUsuario" name="login" class="form-control" placeholder="Nombre de usuario" required autofocus>
        
        <label for="inputPassword" class="sr-only">Contraseña</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Contraseña" required>
        
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="commit">Login</button>
</form>