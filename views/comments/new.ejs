<!-- para todos los tamaños excepto xs -->
<form class="hidden-xs" method="post" action="/quizes/<%= quizId %>/comments/">
  <div class="form-group">    
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <input type="text" class="form-control" name="comment[texto]" placeholder="Introduzca aqui su comentario...">    
      </div>
    </div>    
  </div>
  <div class="form-group">
   	<button type="submit" class="btn btn-primary"><span>Enviar</span></button>
   	<a href="/quizes/<%= quizId %>" class="btn btn-warning" role="button"><span>Cancelar</span></a>
  </div>	
</form>

<!-- solo para tamaños xs -->
<form class="visible-xs-block" method="post" action="/quizes/<%= quizId %>/comments/">
  <div class="form-group">    
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <input type="text" class="form-control" name="comment[texto]" placeholder="Introduzca aqui su comentario...">    
      </div>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary"><span>Enviar</span></button>
    <a href="/quizes/<%= quizId %>" class="btn btn-warning" role="button"><span>Cancelar</span></a>
  </div>  
</form>
